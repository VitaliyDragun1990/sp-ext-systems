<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="marriageDao" class="com.revenat.ext.registeroffice.persistence.JPAMarriageDao">
    </bean>

    <bean id="marriageManager" class="com.revenat.ext.registeroffice.business.MarriageManager">
        <constructor-arg index="0" ref="marriageDao"/>
    </bean>

    <bean id="marriageResource" class="com.revenat.ext.registeroffice.integration.MarriageResource">
        <constructor-arg index="0" ref="marriageManager"/>
    </bean>

</beans>